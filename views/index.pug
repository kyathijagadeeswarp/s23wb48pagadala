extends layout

block content
  h1= title
  p Welcome to Assignment10 #{title}
  button.btn.btn-secondary(onclick="doReduce()") Press Button
  div#reduce Reduce the value
  
  script.
    let count = 20;
    let change = -1;
    
    function doReduce() {
      count += change;
      change--;
      document.getElementById("reduce").innerText = "Count " + count + " with change " + change;
    }
